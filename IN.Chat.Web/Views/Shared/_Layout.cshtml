<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Chat">
    <meta name="author" content="Bates Westmoreland">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <style> body { padding-top: 60px; } </style>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-responsive.css" />
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    @RenderSection("css", false)
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Kaushan+Script' />
    @RenderSection("jshead", false)
    <link rel="shortcut icon" href="data:image/png;base64," />
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <span class="brand">Chat</span>
                @if (User.Identity.IsAuthenticated)
                { 
                <div class="btn-group pull-right">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="icon-user"></i>
                        <span id="navbar-username">@User.Identity.Name</span>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/logout"><i class="icon-pencil"></i>signout</a></li>
                    </ul>
                </div>
                }
            </div>
        </div>
    </div>
    <div id="content" class="container">
        @RenderBody()
    </div>
    <div id="footer" class="container">
        <hr />
        <br />
        <div class="row-fluid">
            <div class="span10">
                <span class="brand">Chat</span><br />
                Bates Westmoreland<br />
                Hack-a-thon 0001<br />
            </div>
            <div class="span2"><a class="backtotop" href="#">Back to top</a></div>
        </div>
        <br />
        <br />
        <br />
        <br />
    </div>
    <script type="text/javascript" src="~/Scripts/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("jsbody", false)
</body>
</html>
